
SET CMAKE_BUILD_TYPE="%CONFIGURATION%"

SET INSTALL_DIR="%PROFILE%-%PLATFORM%-%CMAKE_BUILD_TYPE%"
SET BUILD_DIR="%INSTALL_DIR%-build"

MKDIR "%BUILD_DIR%"
CD "%BUILD_DIR%"
cmake -G "%CMAKE_GENERATOR%" .. "-DCMAKE_BUILD_TYPE=%CMAKE_BUILD_TYPE%" %CMAKE_OPTIONS%
cmake --build . --config "%CMAKE_BUILD_TYPE%"
cmake -DCMAKE_INSTALL_PREFIX=../"%INSTALL_DIR%" -P cmake_install.cmake
CD ..


